<footer id="footer">
    <div class="inner">
        <section>
            <h2>Get in touch</h2>
            {% if page.header.footer.form_enabled  %}
                <form method="post" action="{{ page.header.footer.form_action }}">
                    <div class="field half first">
                        <input type="text" name="name" id="name" placeholder="Name" />
                    </div>
                    <div class="field half">
                        <input type="email" name="email" id="email" placeholder="Email" />
                    </div>
                    <div class="field">
                        <textarea name="message" id="message" placeholder="Message"></textarea>
                    </div>
                    <ul class="actions">
                        <li><input type="submit" value="Send" class="special" /></li>
                    </ul>
                </form>            
            {% endif %}
        </section>

        <section>
            <h2>Follow</h2>
            <ul class="icons">
                {% set links = page.header.footer.links %}
                {% for fa,link in links %}
                    <li><a href="{{ link }}" class="icon style2 {{ fa }}"><span class="label">Twitter</span></a></li>
                {% endfor %}
            </ul>
        </section>
    </div>
</footer>